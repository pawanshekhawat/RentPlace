<% layout("/layouts/boilerplate.ejs") %>

<h1>All Listings</h1>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 justify-content-around">
    <% for(let listing of allListing) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="<%= listing.image %>" alt="listing_img" style="height: 20rem;">
                
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title || "No Title Available" %></b><br>
                        <span>
                            <!-- Price with default value -->
                            Price: &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night
                        </span>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
