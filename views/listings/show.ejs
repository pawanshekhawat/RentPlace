<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Listing Details: </h3>
    </div>

    <div class="card col-8 offset-2 show-card">
        <!-- Image with fallback -->
        <img class="card-img-top show-image" src="<%= listing.image %>" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <!-- Title with fallback -->
                <b><%= listing.title || "No Title Available" %></b><br>
                <!-- Description with fallback -->
                <%= listing.description || "No Description Available" %><br>
                <!-- Price with fallback -->
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night<br>
                <!-- Location with fallback -->
                <%= listing.location || "No Location Provided" %><br>
                <!-- Country with fallback -->
                <%= listing.country || "Country Not Specified" %>
            </p>
        </div>
    </div>
    <br>
</div>

<div class="show-btns mb-4">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>
