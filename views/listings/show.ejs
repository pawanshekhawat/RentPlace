<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>
                <%= listing.title %>
            </h3>
        </div>

        <div class="card listing-card col-8 offset-2 show-card">
            <!-- Image with fallback -->
            <img class="card-img-top show-image" src="<%= listing.image %>" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b>Published By: </b>
                    <%= listing.owner.username %> 
                </p>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text">
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                </p>
                <p class="card-text">
                    <%= listing.location %>
                </p>
                <p class="card-text">
                    <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
    </div>
<% if (currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="show-btns mb-4">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="mb-0">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>

<% } %> 
    <div class="col-8 offset-2">
        <hr>
        <% if(currUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id  %>/reviews" method="POST" class="mb-3" novalidate
            class="needs-validation">
            <div class="m-2">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="m-2">
                <label for="comment" class="form-label">Commment</label>
                <textarea name="review[comment]" id="comment" cols="90" rows="4" class="form-control"
                    required></textarea>
                <div class="invalid-feedback">
                    Please add some comment for review
                </div>
            </div>
            <button class="btn btn-outline-dark m-2">Submit</button>
        </form>
        <hr>
        <% } %>

        <p><b>All Reviews</b></p>
        <div class="row">
            <% for(review of listing.reviews) { %>
                <div class="card col-5 m-2 p-2">
                    <div class="card-body">
                        <div class="card-title">@<%= review.author.username %></div>
                        <p class="card-text">
                            <%= review.comment %>
                        </p>
                        <p class="card-text">
                            <%= review.rating %> starts
                        </p>
                    </div>
                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-dark mt-2">Delete Review</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>